@using Microsoft.AspNetCore.Mvc.TagHelpers
@using NoticeBoard.Common.Enums
@model NoticeBoard.WebApplication.Models.ViewModels.GetDetailViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

@using (Html.BeginForm("Edit", "Announcement", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="Title" class="sr-only">標題</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="AnnouncementType" class="sr-only">類別</label><br>
        <select asp-for="AnnouncementType" asp-items="Html.GetEnumSelectList<AnnouncementType>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <div class="form-group">
        <label for="PublishEndDate" class="sr-only">上架時間</label>
        @Html.TextBoxFor(m => m.PublishStartDate, new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        <label for="PublishEndDate" class="sr-only">下架時間</label>
        @Html.TextBoxFor(m => m.PublishEndDate, new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        <label for="PublishStatus" class="sr-only">發佈狀態</label>
        <select asp-for="PublishStatus" asp-items="Html.GetEnumSelectList<PublishStatus>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Content" class="sr-only">內容</label>
        @Html.TextBoxFor(m => m.Content, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="IsTop" class="sr-only">是否置頂</label>
        @Html.CheckBoxFor(m => m.IsTop)
    </div>
    <div class="form-group">
        <label for="Boost" class="sr-only">權重</label>
        @Html.LabelFor(m => m.Boost)
        @Html.TextBoxFor(m => m.Boost, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="DisplayState" class="sr-only">顯示狀態</label>
        <select asp-for="DisplayState" asp-items="Html.GetEnumSelectList<DisplayState>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
}